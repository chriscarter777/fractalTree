<Window x:Class="FractalTrees.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FractalTrees"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnDraw" Content="CreateFractalTree" HorizontalAlignment="Left" Margin="437,5,0,0" VerticalAlignment="Top" Width="75" Click="btnDraw_Click"/>
        <TextBox x:Name="txtNumGenerations" HorizontalAlignment="Left" Height="23" Margin="5,5,0,0" TextWrapping="Wrap" Text="# of generations" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAngle" HorizontalAlignment="Left" Height="23" Margin="130,5,0,0" TextWrapping="Wrap" Text="Half-angle (rad)" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtProportionateLength" HorizontalAlignment="Left" Height="23" Margin="254,5,0,0" TextWrapping="Wrap" Text="Proportionate length" VerticalAlignment="Top" Width="120"/>
        <Grid Name="DrawSpace" HorizontalAlignment="Left" Height="260" Margin="5,50,0,0" VerticalAlignment="Top" Width="500"/>

    </Grid>
</Window>
